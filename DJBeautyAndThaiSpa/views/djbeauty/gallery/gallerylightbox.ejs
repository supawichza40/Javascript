<% layout("djbeauty/layouts/boilerplate.ejs") %>
<body>
  <main class="container">
    <h1>Gallery</h1>
    <% if(currentuser) {%> 
    <a href="/gallery/new">New Gallery</a>
    <a href="/gallery/update">Update Gallery</a>
    <% } %> 
    <div class="photo-gallery">
      <div class="row photos">
        <% for(let image of gallery.images){ %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <a href="<%= image.url %> " data-lightbox="photos"
            ><img style="width:600px; height:300px; object-fit: cover;" class="img-fluid" src="<%= image.url %>"
          /></a>
        </div>
        <% } %>
      </div>
    </div>
  </main>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.8.2/js/lightbox.min.js"></script>
</body>
