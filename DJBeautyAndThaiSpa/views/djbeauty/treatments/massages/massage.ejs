<% layout("djbeauty/layouts/boilerplate.ejs") %>
<body>
  <main>
    <div class="row">
      <div class="col-2"></div>
      <div class="col-8">
        
        <article>
          <h1 class="">Massages</h1>
          <% massages.forEach((massage,index)=>{%>
          <div class="card" style="width: 30rem;">
            <img class="card-img-top" src="<%= massage.images[0].url %>" alt="Card image cap">
            <div class="card-body">
              <h2 class="card-title" id="<%= massage.name %>-<%= index  %>">Name:<%= massage.name %></h2>
              <p class="card-text"><%= massage.description %></p>
              <p class="card-text">Benefit: <%= massage.benefit %></p>
              <p class="card-text"><% for(let p of massage.prices ) {%>
          <p>Duration:<%= p.duration %> Price:<%= p.amount %></p>
          <% } %></p>
              <a href="/treatments/massages/<%= massage._id %> " class="btn btn-primary">Detail</a>
            </div>
          </div>
          <% }) %>
        </article>
      </div>
      <div class="col-2">
        <nav class="navbar sticky-top" style="top: 60px">
          <ul>
            <% massages.forEach((massage,index)=>{ %>
            <a href="#<%= massage.name %>-<%= index %>  ">
              <li><%= massage.name %></li>
            </a>
            <% }) %>
          </ul>
        </nav>
      </div>
    </div>
  </main>
</body>
